<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BlureAgency" parent="Theme.Material3.DayNight.NoActionBar">
         Customize your dark theme here.
         <item name="colorPrimary">@color/black</item>
         <item name="colorPrimaryDark">@color/dark_gray</item>
         <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="screen_background"><item name="android:background">@color/black</item></style>
    <style name="icon_setting"><item name="android:src">@drawable/settings_dark</item></style>

    <style name="icon_signout"><item name="android:src">@drawable/arrow_signout_dark</item></style>
    <style name="icon_language">
        <item name="android:src">@drawable/language_dark</item>

    </style>
<!--    <style name="home_cards_background"><item name="android:background">@color/dark_gray</item></style>-->
    <style name="image_card_view_background"><item name="android:background">@color/dark_gray</item></style>
    <style name="text_color_description"><item name="android:textColor">@color/silver</item></style>
    <style name="signin_and_signup_text_color"><item name="android:textColor">@color/white</item></style>

    <style name="login_and_signup_bg"><item name="android:background">@drawable/bg_2</item> </style>
    <style name="edit_text_style"><item name="android:background">@drawable/edit_text_bg_dark</item>
        <item name="android:textColorHint">@color/gray</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="hintTextColor">@color/light_gray</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="text_color"><item name="android:textColor">@color/white</item></style>
    <style name="bottom_nav"><item name="android:itemBackground">@color/black</item></style>
    <style name="splash_icon"><item name="android:src">@drawable/icon_white</item></style>
    <style name="button_background">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white_smoke</item></style>
</resources>