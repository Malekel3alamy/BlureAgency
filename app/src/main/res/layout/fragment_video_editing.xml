<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.services.VideoEditingFragment">


    <TextView
        android:id="@+id/networkServiceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="More Fonts..."
        android:text="Video Edit"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/alata" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            >
            <GridLayout
                android:id="@+id/network_fragment_four_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="20dp"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/net1"
                    app:shapeAppearanceOverlay="@style/ImageRoundedCorners"

                    android:scaleType="fitXY"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_margin="5dp"
                    android:src="@drawable/video1"
                    app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/net2"
                    android:scaleType="fitXY"
                    android:layout_column="1"
                    android:layout_row="0"
                    app:shapeAppearanceOverlay="@style/ImageRoundedCorners"

                    android:src="@drawable/video2"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:layout_column="0"
                    android:layout_row="1"
                    app:shapeAppearanceOverlay="@style/ImageRoundedCorners"

                    android:src="@drawable/video3"
                    android:id="@+id/net3"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:src="@drawable/video4"
                    android:layout_margin="5dp"
                    android:id="@+id/net4"
                    app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
                    app:layout_constraintStart_toStartOf="parent"

                    />
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At [ Blore EG ], we specialize in providing top-tier video editing services that transform your raw footage into compelling visual stories. Our team of skilled editors is dedicated to enhancing your content with professional-grade techniques, ensuring each video is polished, engaging, and aligned with your brandâ€™s vision. We handle everything from basic cuts and transitions to advanced color grading, sound design, and special effects. By leveraging the latest editing software and staying updated with industry trends, we deliver videos that captivate your audience and elevate your digital presence. Partner with us to bring your creative vision to life and make a lasting impact with high-quality, visually stunning videos."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintTop_toBottomOf="@id/network_fragment_four_images"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/networkFragment_contact_us_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:background="@drawable/contact_us_btn_bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>