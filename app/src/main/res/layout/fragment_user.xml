<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screen_background"
    android:fillViewport="true"

    android:id="@+id/userFragment"
    tools:context=".ui.fragments.UserFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >

       <androidx.cardview.widget.CardView
           android:id="@+id/user_details"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           app:cardCornerRadius="15dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginStart="10dp"
           android:layout_marginTop="30dp"
           >


           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               >
               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/user_image"
                   android:layout_width="65dp"
                   android:layout_height="65dp"
                   android:src="@drawable/ic_person"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginStart="5dp"
                   app:civ_border_width="2dp"
                   app:civ_border_color="@color/gray"
                   />
               <TextView
                   android:id="@+id/user_name_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="20dp"
                   style="@style/text_color"
                   android:layout_marginStart="15dp"
                   app:layout_constraintStart_toEndOf="@id/user_image"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_gravity="center_vertical"
                   />
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/settings"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          app:cardCornerRadius="10dp"
          android:layout_marginEnd="20dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/user_details"
          android:layout_marginStart="10dp"
          android:layout_marginTop="45dp"
          >
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              >
              <ImageView
                  android:id="@+id/setting_image"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  style="@style/icon_setting"
                  android:scaleType="centerCrop"
                  android:layout_marginStart="5dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/settings"
                  android:textSize="20dp"
                  style="@style/text_color"
                  android:layout_gravity="center_vertical"
                  app:layout_constraintStart_toEndOf="@id/setting_image"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginStart="10dp"
                  />
          </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/our_website_card_view"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           app:cardCornerRadius="10dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/about"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           >
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               >
               <ImageView
                   android:id="@+id/our_web_im"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   style="@style/icon_our_web"
                   android:padding="4dp"
                   android:scaleType="centerCrop"
                   android:layout_marginStart="5dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/our_wbsite"
                   android:textSize="20dp"
                   style="@style/text_color"
                   android:layout_gravity="center_vertical"
                   app:layout_constraintStart_toEndOf="@id/our_web_im"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginStart="10dp"
                   />
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/sign_out_card_view"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           app:cardCornerRadius="10dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/our_website_card_view"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           >
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               >
               <ImageView
                   android:id="@+id/sign_out_image"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:padding="5dp"
                   style="@style/icon_signout"
                   android:scaleType="centerCrop"
                   android:layout_marginStart="5dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/sign_out"
                   android:textSize="20dp"
                   style="@style/text_color"
                   android:layout_gravity="center_vertical"
                   app:layout_constraintStart_toEndOf="@id/sign_out_image"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginStart="10dp"
                   />
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
              android:id="@+id/about"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              app:cardCornerRadius="10dp"
              android:layout_marginEnd="20dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/settings"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              >
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >
                  <ImageView
                      android:id="@+id/info"
                      android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:src="@drawable/info_light"
                  android:scaleType="centerCrop"
                  android:layout_marginStart="5dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/about_us"
                  android:textSize="20dp"
                  style="@style/text_color"
                  android:layout_marginStart="5dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toEndOf="@id/info"
                  android:drawablePadding="10dp"
                  android:layout_gravity="center_vertical"
                  />
          </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/version"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/about"
           android:layout_marginTop="50dp"
           android:textSize="15dp"
           android:textColor="@color/gray"
           app:layout_constraintBottom_toBottomOf="parent"
/>
   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>