<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userFragment"
    tools:context=".ui.fragments.UserFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <TextView
           android:id="@+id/about_us_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="About Us"
           android:textColor="@color/black"
           app:layout_constraintTop_toTopOf="parent"
           android:textSize="22sp"
           android:textStyle="bold"
           android:layout_marginStart="5dp"
           android:layout_marginTop="115dp"
           app:layout_constraintStart_toStartOf="parent"
           />
       <TextView
           android:id="@+id/brief_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Welcome To Blore EG, Your Premier Provider Of IT Construction And Network Infrastructure Solutions In Egypt. We Specialize In
Creating Robust And Reliable Network Architectures That Empower Businesses And Governmental Institutions To Thrive In The Digital
Era. With Our Deep Industry Knowledge And Cutting-Edge Technologies, We Deliver Scalable And Tailored Solutions That Meet Your
Unique Requirements. Our Commitment To Excellence And Customer Satisfaction Drives Us To Create Network Infrastructures That
Enable Seamless Operations, Effective Collaboration, And Continuous Innovation. Partner With Platinum And Let Us Build A Strong Andws
Reliable Network Infrastructure That Fuels Your Growth And Success In The Digital Age.
Go to Settings to activate Windows"
           android:layout_marginTop="10dp"
           android:textSize="15sp"
           android:textColor="@color/gray"
           app:layout_constraintTop_toBottomOf="@id/about_us_tv"
           android:padding="5dp"
           android:layout_marginStart="5dp"
           android:layout_marginEnd="5dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:fontFamily="@font/inter_medium"
           />







       <TextView
           android:id="@+id/our_location_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Our Location :"
           android:textColor="@color/black"
           app:layout_constraintTop_toBottomOf="@id/brief_tv"
           android:textSize="22sp"
           android:textStyle="bold"
           android:layout_marginStart="5dp"
           android:layout_marginTop="15dp"
           app:layout_constraintStart_toStartOf="parent"
           />

       <TextView
           android:id="@+id/location_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="El Dokkey / Cairo / Egypt "
           android:textColor="@color/gray"
           app:layout_constraintTop_toBottomOf="@id/our_location_tv"
           android:textSize="20sp"
           android:fontFamily="@font/inter_medium"
           android:layout_marginStart="5dp"
           android:layout_marginTop="15dp"
           app:layout_constraintStart_toStartOf="parent"
           />

       <TextView
           android:id="@+id/join_us_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Join Us On "
           android:textColor="@color/black"
           app:layout_constraintTop_toBottomOf="@id/location_tv"
           android:textSize="24sp"
           android:textStyle="bold"
           android:fontFamily="@font/inter_medium"
           android:layout_marginStart="5dp"
           android:layout_marginTop="20dp"
           app:layout_constraintStart_toStartOf="parent"
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/join_us_tv"
           android:orientation="horizontal"
           >
           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/facebook"
               android:paddingTop="15dp"
               app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
               android:scaleType="centerCrop"
               android:layout_margin="2dp"
               app:layout_constraintTop_toBottomOf="@id/join_us_tv"
               app:layout_constraintStart_toStartOf="parent"
               android:paddingStart="15dp"
               android:src="@drawable/facebook"
               />

           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/instegram"
               android:paddingTop="15dp"
               app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
               android:scaleType="centerCrop"
               android:layout_margin="2dp"
               app:layout_constraintTop_toBottomOf="@id/join_us_tv"
               app:layout_constraintStart_toStartOf="parent"
               android:paddingStart="15dp"
               android:src="@drawable/instagram"
               />
           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/whats_up"
               android:paddingTop="15dp"
               app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
               android:scaleType="centerCrop"
               android:layout_margin="2dp"
               app:layout_constraintTop_toBottomOf="@id/join_us_tv"
               app:layout_constraintStart_toStartOf="parent"
               android:paddingStart="15dp"
               android:src="@drawable/whatsapp"
               />
           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/linked_in"
               android:paddingTop="15dp"
               app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
               android:scaleType="centerCrop"
               android:layout_margin="2dp"
               app:layout_constraintTop_toBottomOf="@id/join_us_tv"
               app:layout_constraintStart_toStartOf="parent"
               android:paddingStart="15dp"
               android:src="@drawable/linkedin"
               />
       </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>