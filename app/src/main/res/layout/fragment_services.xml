<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.servicesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/servicesFragment"
    >

    <TextView
        android:id="@+id/networkServiceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="More Fonts..."
        android:text="Services"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/alata" />

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/networkServiceTV"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginTop="25dp"
       android:layout_marginBottom="10dp"
       >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_marginTop="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="80dp"

           >
           <LinearLayout
               android:id="@+id/firstRow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:orientation="horizontal"
               >

               <androidx.cardview.widget.CardView
                   android:id="@+id/marketingService"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   android:layout_columnWeight="0"
                   android:layout_rowWeight="0"
                   android:layout_gravity="center_horizontal"
                   app:cardElevation="8dp"
                   android:layout_marginStart="15dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/marketingIV"
                           android:layout_width="match_parent"
                           android:layout_height="185dp"
                           android:padding="25dp"
                           android:src="@drawable/marketing2"
                           android:background="@color/end_color"
                           android:scaleType="fitXY"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Marketing"
                           android:textAlignment="center"
                           android:textSize="15sp"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/white"
                           app:layout_constraintBottom_toBottomOf="@id/marketingIV"
                           app:layout_constraintStart_toStartOf="parent"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/WebAppService"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:id="@+id/webIV"
                           android:layout_width="match_parent"
                           android:layout_height="185dp"
                           android:padding="15dp"
                           android:background="@color/end_color"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           android:src="@drawable/web_dev2"
                           android:scaleType="fitXY"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Web Development"
                           android:textAlignment="center"
                           android:textSize="15sp"
                           android:textColor="@color/white"
                           android:layout_marginBottom="5dp"
                           app:layout_constraintBottom_toBottomOf="@id/webIV"
                           app:layout_constraintStart_toStartOf="parent"

                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/secondRow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               app:layout_constraintTop_toBottomOf="@id/firstRow"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/androidService"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"

                   android:layout_marginTop="10dp"
                   android:layout_marginStart="15dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/androidIV"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="15dp"
                           android:src="@drawable/android1"
                           android:background="@color/end_color"
                           android:scaleType="fitXY"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Android App"
                           android:textAlignment="center"
                           android:textColor="@color/white"
                           android:textSize="15sp"
                           android:layout_marginBottom="5dp"
                           app:layout_constraintBottom_toBottomOf="@id/androidIV"
                           app:layout_constraintStart_toStartOf="parent"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/networkService"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"

                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/networkIV"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="15dp"
                           android:src="@drawable/network2"
                           android:background="@color/end_color"
                           android:scaleType="fitXY"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Network"
                           android:textAlignment="center"
                           android:textColor="@color/white"
                           android:textSize="15sp"
                           android:layout_marginBottom="5dp"
                           app:layout_constraintBottom_toBottomOf="@id/networkIV"
                           app:layout_constraintStart_toStartOf="parent"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/thirdrow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               app:layout_constraintTop_toBottomOf="@id/secondRow"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/Security"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"

                   android:layout_marginStart="15dp"
                   android:layout_marginTop="5dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/securityIV"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="15dp"
                           android:background="@color/end_color"
                           android:src="@drawable/security_system"
                           android:scaleType="fitXY"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Security Systems"
                           android:textAlignment="center"
                           android:textSize="15sp"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/white"
                           app:layout_constraintBottom_toBottomOf="@id/securityIV"
                           app:layout_constraintStart_toStartOf="parent"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/GeneralContracting"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:id="@+id/generalIV"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="20dp"
                           android:background="@color/end_color"
                           android:src="@drawable/general2"
                           android:scaleType="fitXY"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="General"
                           android:textAlignment="center"
                           android:textSize="15sp"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/white"
                           app:layout_constraintBottom_toBottomOf="@id/generalIV"
                           app:layout_constraintStart_toStartOf="parent"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/fourthRow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               app:layout_constraintTop_toBottomOf="@id/thirdrow"
               app:layout_constraintStart_toStartOf="@id/thirdrow"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/videoEditService"
                   android:layout_height="185dp"
                   android:layout_width="160dp"
                   app:cardElevation="8dp"

                   android:layout_marginStart="15dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="10dp"
                   app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                   >

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >
                   <ImageView
                       android:id="@+id/videoEdit"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="15dp"
                       android:background="@color/end_color"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       android:src="@drawable/video_edit"
                       android:scaleType="fitXY"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Video Editing"
                       android:textAlignment="center"
                       android:textSize="15sp"
                       android:textColor="@color/white"
                       android:layout_marginBottom="5dp"
                       app:layout_constraintBottom_toBottomOf="@id/videoEdit"
                       app:layout_constraintStart_toStartOf="parent"

                       />
               </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
           </LinearLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>